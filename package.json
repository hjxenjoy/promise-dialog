{
  "name": "promise-dialog",
  "version": "2.0.1",
  "description": "Promise Based Dialog",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "yarn",
    "prepublishOnly": "rm -rf ./dist && npm run build",
    "start": "webpack-dev-server --config ./config/webpack.config.dev.js",
    "build": "webpack --config ./config/webpack.config.prod.js && cp ./src/index.d.ts ./dist",
    "release": "release-it",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hjxenjoy/promise-dialog.git"
  },
  "keywords": [
    "dialog",
    "toast",
    "promise"
  ],
  "author": "Jinxin Hu <hjxenjoy@gmail.com> (https://hujin.xin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hjxenjoy/promise-dialog/issues"
  },
  "homepage": "https://github.com/hjxenjoy/promise-dialog#readme",
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@release-it/conventional-changelog": "^1.1.0",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "conventional-changelog-cli": "^2.0.21",
    "css-loader": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "error-overlay-webpack-plugin": "^0.4.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "release-it": "^14.4.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2"
  }
}
